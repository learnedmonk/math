<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:gravity="center" >
	<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="5.0"
	        android:orientation="horizontal" >

        	<TextView
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:typeface="serif"
	            android:textColor="#ffffff"
	            android:textSize="40sp"
	            android:gravity="center"
	            android:text="Math Practice" >
		</TextView>
    </LinearLayout>
    
   	<Button
        android:id="@+id/practice"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:padding="10dp"
   		android:textColor="#ffffff"
   		android:layout_margin="10dp"
   		android:background="@drawable/monkbutton"
   		android:onClick="practice"
        android:text="Practice" />
   
   	<LinearLayout 
   	    android:id="@+id/practice_tabs"
   	    android:orientation="horizontal"
   	    android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:weightSum="2"
        android:visibility="gone"
        >
        	<Button 
        	   	android:id="@+id/tables"
        	   	android:layout_width="0dp"
        		android:layout_height="fill_parent"
        	   	android:layout_weight="1"
        	   	android:tag="TAB"
        	   	android:onClick="practiceAction"
        	   	android:text="Tables"
        	    />
        	<Button 
        	   	android:id="@+id/squares_cubes"
        	   	android:layout_width="0dp"
        		android:layout_height="fill_parent"
        	   	android:layout_weight="1"
        	   	android:tag="SQCUB"
        	   	android:onClick="practiceAction"
        	   	android:text="Squares/Cubes"
        	    />
   	</LinearLayout>
   	
   	<LinearLayout 
   	    android:id="@+id/level_tabs"
   	    android:orientation="horizontal"
   	    android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:weightSum="5"
        android:visibility="gone"
        >
        	<Button 
        	   	android:id="@+id/level1"
        	   	android:layout_width="0dp"
        		android:layout_height="fill_parent"
        	   	android:layout_weight="1"
        	   	android:tag="1"
        	   	android:onClick="quizAction"
        	   	android:text="Level 1"
        	    />
        	<Button 
        	   	android:id="@+id/level2"
        	   	android:layout_width="0dp"
        		android:layout_height="fill_parent"
        	   	android:layout_weight="1"
        	   	android:tag="2"
        	   	android:onClick="quizAction"
        	   	android:text="Level 2"
        	    />
        	<Button 
        	   	android:id="@+id/level3"
        	   	android:layout_width="0dp"
        		android:layout_height="fill_parent"
        	   	android:layout_weight="1"
        	   	android:tag="3"
        	   	android:onClick="quizAction"
        	   	android:text="Level 3"
        	    />
        	<Button 
        	   	android:id="@+id/level4"
        	   	android:layout_width="0dp"
        		android:layout_height="fill_parent"
        	   	android:layout_weight="1"
        	   	android:tag="4"
        	   	android:onClick="quizAction"
        	   	android:text="Level 4"
        	    />
        	<Button 
        	   	android:id="@+id/level5"
        	   	android:layout_width="0dp"
        		android:layout_height="fill_parent"
        	   	android:layout_weight="1"
        	   	android:tag="5"
        	   	android:onClick="quizAction"
        	   	android:text="Level 5"
        	    />
   	    
   	</LinearLayout>
	<Button
        android:id="@+id/quiz"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
       	android:padding="10dp"
       	android:layout_margin="10dp"
   		android:textColor="#ffffff"
   		android:background="@drawable/monkbutton"
        android:onClick="quiz"
        android:text="Quiz" />

	<Button
        android:id="@+id/myscores"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_weight="1.2"
        android:padding="10dp"
        android:layout_margin="10dp"
   		android:textColor="#ffffff"
   		android:background="@drawable/monkbutton"
   		android:onClick="myscores"
        android:text="My Scores" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="0dp" 
        android:layout_weight="0.5"
        android:text="Copyright LearnedMonk"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</LinearLayout>